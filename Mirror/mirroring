name: Mirroring

on:
  push:
    branches:
      
      main   # d√©clenche le mirroring uniquement quand tu pushes sur main

jobs:
  to_epitech_github:
    runs-on: ubuntu-22.04
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2
        with:
          fetch-depth: 0 # Fetch depth set to 0 means that all commits are to be mirrored

      - uses: pixta-dev/repository-mirroring-action@v1
        with:
              target_repo_url: git@github.com:EpitechMscProPromo2028/T-WEB-501-NAN_2.git
